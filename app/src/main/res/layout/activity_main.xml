<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="admin.mobile.rsi.adminmobile.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mobilka" />

            <Button
                android:id="@+id/mainAddAuthor"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:text="@string/dodaj_autora"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="73dp" />

            <Button
                android:id="@+id/mainSearchAuthor"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:elevation="0dp"
                android:text="@string/szukaj_autora"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="160dp" />

            <Button
                android:id="@+id/mainAddBook"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:text="@string/dodaj_ksiazke"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="247dp" />

            <Button
                android:id="@+id/mainSearchBook"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:text="@string/szukaj_ksiazke"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="334dp" />

            <Button
                android:id="@+id/mainSearchUser"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:text="@string/szukaj_uzytkownika"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="421dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
